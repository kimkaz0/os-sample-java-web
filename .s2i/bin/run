#!/bin/bash 
#echo "Before running application"
#exec /usr/libexec/s2i/run
#################################
CMD_ADDUSER=/wildfly/bin/add-user.sh
#################################
echo "adding management user" 
${CMD_ADDUSER} -u ${env.OPENSHIFT_WILDFLY_MGMT_USERNAME} -p ${OPENSHIFT_WILDFLY_MGMT_PASSWORD} -s -e

echo "exec standalone.sh" 
exec /wildfly/bin/standalone.sh -b 0.0.0.0 -Djboss.bind.address.management=0.0.0.0
#################################
